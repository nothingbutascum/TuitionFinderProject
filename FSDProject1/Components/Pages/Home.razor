@page "/"

<PageTitle>Hawk Tuition Finder - Home</PageTitle>

<main>
    <section class="hero-section">
        <div class="hero-content">
            <h2>Discover Expert Tutors</h2>
            <p>Connecting students with top-notch educators to achieve academic excellence. Let us guide you to success.</p>
            <NavLink href="/services" class="cta-button">Get Started</NavLink>
        </div>
    </section>
</main>

<footer>
    <p>&copy; 2024 Hawk Tuition Finder. All rights reserved. <NavLink href="/privacy-policy">Privacy Policy</NavLink></p>
</footer>

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/10141608.jpg') center center/cover no-repeat;
        height: calc(100vh - 140px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        padding: 20px;
    }

    .hero-content h2 {
        font-size: 3em;
        font-weight: bold;
        margin-bottom: 10px;
        font-family: 'Playfair Display', serif;
        text-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .hero-content p {
        font-size: 1.4em;
        margin-bottom: 30px;
        line-height: 1.6;
        font-weight: 300;
        max-width: 600px;
    }

    .cta-button {
        padding: 15px 40px;
        font-size: 1.2em;
        font-weight: 600;
        color: white;
        background: linear-gradient(135deg, #ff6f61, #de3e44);
        text-transform: uppercase;
        text-decoration: none;
        border: none;
        border-radius: 30px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: inline-block;
    }

        .cta-button:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.3);
            text-decoration: none;
            color: white;
        }

    /* Footer */
    footer {
        background-color: #000428;
        color: #b8b8b8;
        padding: 20px 0;
        text-align: center;
        font-size: 0.9em;
    }

        footer p {
            margin: 0;
        }

        footer ::deep a {
            color: #ffcd3c;
            text-decoration: none;
            font-weight: 500;
        }

            footer ::deep a:hover {
                text-decoration: underline;
            }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-content h2

    {
        font-size: 2em;
    }

    .hero-content p {
        font-size: 1.1em;
    }

    }
</style>