        text-align: left;
    }

    .recent-bookings .status {
        font-weight: bold;
    }

    .why-choose {
        text-align: center;
        padding: 60px 20px;
        background: #f8f9fa;
    }

    .features-grid {
        display: flex;
        justify-content: center;
        gap: 30px;
    }

    .feature-card {
        text-align: center;
        max-width: 250px;
    }

        .feature-card img {
            width: 80px;
            height: 80px;
            margin-bottom: 10px;
        }

    @@media (max-width: 768px) {
        .features-grid

    {
        flex-direction: column;
        align-items: center;
    }

    }
</style>

@code {
    private bool IsAdmin;
    private int TotalTutors, TotalStudents, TotalBookings, PendingReviews;
    private List<Booking> RecentBookings = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        IsAdmin = user.IsInRole("Admin");

        using var context = DbFactory.CreateDbContext();
        TotalTutors = await context.Tutors.CountAsync();
        TotalStudents = await context.StudentUser.CountAsync();
        TotalBookings = await context.Booking.CountAsync();
        

        RecentBookings = await context.Booking
            .Include(b => b.StudentUser)
            .Include(b => b.Tutor)
            .OrderByDescending(b => b.DateCreated)
            .Take(5)
            .ToListAsync();
    }
}
